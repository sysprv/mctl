#! /usr/pkg/bin/bash

function get() {
	curl --fail --cacert cacert.pem "$@"
}

# firewall

pf=/etc/pf.ssh_clients
pfn=pf.ssh_clients.new
pfo=pf.ssh_clients.old

if get -O $pfn https://raw.github.com/sysprv/mctl/master/etc/pf.ssh_clients; then
	if ! test -f $pf || ! diff -q $pf $pfn; then
		/bin/mv $pf $pfo
		/bin/mv $pfn $pf
		pfctl -t ssh_clients -T replace -f $pf
	fi
fi


# ssh

readonly rc=/etc/rc.d/sshd

if ! [[ -x $rc ]]; then
	echo bad rc
	exit 1
fi

stat=0
if ! $rc status >/dev/null; then
	stat=1
fi

function start() {
	if [[ $stat -eq 1 ]]; then
		$rc start
	fi
}

function stop() {
	if [[ $stat -eq 0 ]]; then
		$rc stop
	fi
}

start

